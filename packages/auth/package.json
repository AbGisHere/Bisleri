{
  "name": "@bisleri/auth",
  "type": "module",
  "exports": {
    ".": {
      "default": "./src/index.ts"
    },
    "./*": {
      "default": "./src/*.ts"
    }
  },
  "scripts": {
    "auth:generate": "dotenv -e ../../apps/web/.env -- npx @better-auth/cli generate --config ./src/index.ts --output ../db/src/schema/auth.ts --y"
  },
  "dependencies": {
    "@bisleri/db": "workspace:*",
    "@bisleri/env": "workspace:*",
    "better-auth": "catalog:",
    "dotenv": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@bisleri/config": "workspace:*",
    "dotenv-cli": "^11.0.0",
    "typescript": "catalog:"
  }
}
